{
  "name": "@johntalton/blue-green-chat",
  "version": "2.0.0",
  "description": "",
  "main": "src/index.ts",
  "exports": {
    "import": "./src/index.ts",
    "require": "./lib/src/index.js"
  },
  "type": "commonjs",
  "files": [
    "lib/**/*.js",
    "lib/**/*.d.ts",
    "lib/**/*.d.ts.map",
    "lib/**/*.js.map"
  ],
  "types": "lib/index.d.ts",
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "lint": "npm --silent run lint:ts",
    "lint:ts": "./node_modules/.bin/eslint --no-inline-config --report-unused-disable-directives --ext .ts src/",
    "test": "npm run test:mocha",
    "test:mocha": "mocha",
    "Xstart": "node --loader ts-node/esm.mjs  --require ts-node/register ./src/index.ts",
    "Ystart": "ts-node src/index.ts",
    "dev": "nodemon ./src/index.ts",
    "build": "tsc -p .",
    "build:watch": "npm run build -- -w",
    "coverage": "npm --silent run coverage:c8",
    "coverage:c8": "c8 --check-coverage --all --lines 75 --functions 5 --branches 85 npm --silent run test:mocha -- --no-parallel --reporter min"
  },
  "eslintConfig": {
    "extends": [
      "@johntalton/eslint-config/ts",
      "@johntalton/eslint-config/node"
    ],
    "rules": {
      "import/no-nodejs-modules": "off"
    }
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.spec.ts",
      ".git",
      ".vscode",
      "node_modules"
    ],
    "watch": [
      "src",
      "private"
    ],
    "exec": "ts-node src/index.ts",
    "ext": "ts"
  },
  "mocha": {
    "spec": [
      "test/*.spec.ts"
    ],
    "grep": "@broken|@slow",
    "invert": true,
    "parallel": true,
    "watch": false,
    "sort": false,
    "forbitOnly": true,
    "check-leaks": true,
    "global": [],
    "require": [
      "source-map-support/register",
      "ts-node/register/transpile-only"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johntalton/blue-green-chat.git"
  },
  "author": "johntalton@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/johntalton/blue-green-chat/issues"
  },
  "homepage": "https://github.com/johntalton/blue-green-chat#readme",
  "dependencies": {
    "@johntalton/sse-util": "^0.0.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-rate-limit": "^5.1.3",
    "express-slow-down": "^1.3.1",
    "helmet": "^4.1.0",
    "morgan": "^1.10.0",
    "overpass": "^0.2.2",
    "uuid": "^8.3.0",
    "ws": "^7.3.1"
  },
  "devDependencies": {
    "@johntalton/eslint-config": "github:johntalton/eslint-config",
    "@types/cors": "^2.8.7",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.8",
    "@types/helmet": "^4.0.0",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.6.4",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "c8": "^7.3.0",
    "chai": "^4.2.0",
    "eslint": "^7.8.1",
    "eslint-plugin-fp": "^2.3.0",
    "eslint-plugin-functional": "^3.1.0",
    "eslint-plugin-immutable": "^1.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^30.7.9",
    "eslint-plugin-mocha": "^8.0.0",
    "eslint-plugin-no-loops": "^0.3.0",
    "eslint-plugin-no-use-extend-native": "^0.5.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-spellcheck": "^0.0.17",
    "mocha": "^8.1.3",
    "nodemon": "^2.0.4",
    "source-map-support": "^0.5.19",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  }
}
